<h1>Create a Viewing Party for <%= @movie.title%></h1>

<%= form_with url: "/users/#{@user.id}/movies/#{@movie.movie_id}/viewing-party/create", method: :post, local: true do |form| %>
  <%= form.label 'Length of the Party' %>
  <%= form.number_field :duration %>
  <%= form.label 'What day is the Party?' %>
  <%= form.date_field :when %>
  <%= form.label 'What time does it start?' %>
  <%= form.time_field :start_time %>

  <%= form.submit 'Create A Party' %>
<% end %>