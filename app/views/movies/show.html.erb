<h2><%= @movie.title %></h2>

<%= button_to "Create a Viewing Party", "/users/#{params[:id]}/movies/#{@movie.movie_id}/viewing-party/new", method: :get %>
<%= button_to "Discover Page", "/users/#{params[:id]}/discover", method: :get %>

<h3><%= "Average: #{@movie.average}" %></h3>
<h3><%= "Runtime: #{@movie.runtime}" %></h3>
<h3><%= "Genre(s): #{@movie.genres}" %></h3>
<h3><%= "Summary: #{@movie.summary}" %></h3>

<h2>Cast and Crew:</h2>
<% @cast_members.each do |member| %>
<h3><%= "#{member.name}, #{member.character}" %></h3>
<% end %>


